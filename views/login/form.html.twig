{% extends '/index.html.twig' %}

{% block title %}Logowanie{% endblock %}

{% block content %}
    <form class="form-signin" method="POST" action="{{ url('zaloguj') }}">
        <h2 class="form-signin-heading">Proszę się zalogować</h2>
        <label for="inputEmail" class="sr-only">Adres e-mail</label>
        <input name="email" type="email" id="inputEmail" class="form-control" placeholder="Adres e-mail" required autofocus>
        <label for="inputPassword" class="sr-only">Hasło</label>
        <input name="haslo" type="password" id="inputPassword" class="form-control" placeholder="Hasło" required>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Zaloguj</button>
        <br />
        <a href="{{ url('formularz_rejestracji') }}">Zarejestruj się</a>
    </form>
{% endblock %}

{% block css %}
    <link rel="stylesheet" href="/css/login-form.css">
{% endblock %}